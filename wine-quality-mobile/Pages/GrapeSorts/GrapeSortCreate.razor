@page "/GrapeSorts/Create"
@inherits wine_quality_mobile.Components.Common.BaseComponent
<h3>@Localizer["grape-sorts.create.header"]</h3>

<a class="btn btn-primary" href="/GrapeSorts">@Localizer["common.back"]</a>

<EditForm Model="@CreateGrapeSortRequest" OnValidSubmit="@CreateGrapeSort">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label" for="name">@Localizer["grape-sorts.name"]</label>
        <InputText id="name" class="form-control" @bind-Value="CreateGrapeSortRequest.Name" />
        <ValidationMessage For="@(() => CreateGrapeSortRequest.Name)" />
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["common.confirm"]</button>
</EditForm>