@page "/GrapeSorts/{grapeSortId}/Edit"
@inherits wine_quality_mobile.Components.Common.BaseComponent
<h3>@Localizer["grape-sorts.edit.header"]</h3>

@if (_dataLoaded)
{
    <a class="btn btn-primary" href="/GrapeSorts">@Localizer["common.back"]</a>

    <EditForm Model="@UpdateGrapeSortRequest" OnValidSubmit="@UpdateGrapeSort">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label" for="name">@Localizer["grape-sorts.name"]</label>
            <InputText id="name" class="form-control" @bind-Value="UpdateGrapeSortRequest.Name" />
            <ValidationMessage For="@(() => UpdateGrapeSortRequest.Name)" />
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["common.confirm"]</button>
    </EditForm>
}
else
{
    <p>@Localizer["common.loading"]...</p>
}