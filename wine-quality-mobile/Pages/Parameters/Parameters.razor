@page "/Parameters"
@inherits wine_quality_mobile.Components.Common.BaseComponent

<h3>@Localizer["parameters.header"]</h3>

@if (parametersLoaded)
{

    <div> 
        <a class="btn btn-primary" href="/Parameters/Create">@Localizer["common.add"]</a>
    </div>
    
    @foreach (var parameter in parameters)
    {
        <div class="accordion" id="parameterAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="@($"heading{parameter.Id}")">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{parameter.Id}")" aria-expanded="false" aria-controls="@($"collapse{parameter.Id}")">
                        @parameter.Name
                    </button>
                </h2>
                <div id="@($"collapse{parameter.Id}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{parameter.Id}")" data-bs-parent="#parameterAccordion">
                    <div class="accordion-body">
                        <div class="btn-group" role="group">
                            <a href="/Parameters/@parameter.Id" class="btn btn-secondary"><i class="fa-solid fa-eye"></i></a>
                            <a href="/Parameters/@parameter.Id/Edit" class="btn btn-primary"><i class="fa-solid fa-pen-nib"></i></a>
                            <a href="/Parameters/@parameter.Id/Delete" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div>@Localizer["common.loading"]</div>
}