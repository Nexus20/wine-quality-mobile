@page "/Phases/{phaseId}/Edit"
@inherits wine_quality_mobile.Components.Common.BaseComponent
<h3>@Localizer["phases.edit.header"]</h3>

@if (_phaseLoaded)
{
    <a class="btn btn-primary" href="/Phases">@Localizer["common.back"]</a>

    <EditForm Model="@UpdateProcessPhaseRequest" OnValidSubmit="@EditPhase">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label" for="name">Phase Name</label>
            <InputText id="name" class="form-control" @bind-Value="UpdateProcessPhaseRequest.Name" />
            <ValidationMessage For="@(() => UpdateProcessPhaseRequest.Name)" />
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["common.confirm"]</button>
    </EditForm>
}
else
{
    <p>@Localizer["common.loading"]...</p>
}