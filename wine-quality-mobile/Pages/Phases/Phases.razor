@page "/Phases"
@inherits wine_quality_mobile.Components.Common.BaseComponent

<h3>@Localizer["phases.header"]</h3>

@if (phasesLoaded)
{

    <div> 
        <a class="btn btn-primary" href="/Phases/Create">@Localizer["common.add"]</a>
    </div>
    
    @foreach (var phase in phases)
    {
        <div class="accordion" id="phaseAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="@($"heading{phase.Id}")">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{phase.Id}")" aria-expanded="false" aria-controls="@($"collapse{phase.Id}")">
                        @phase.Name
                    </button>
                </h2>
                <div id="@($"collapse{phase.Id}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{phase.Id}")" data-bs-parent="#phaseAccordion">
                    <div class="accordion-body">
                        <a href="/Phases/@phase.Id/Edit" class="btn btn-primary"><i class="fa-solid fa-pen-nib"></i></a>
                        <a href="/Phases/@phase.Id/Delete" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        <a href="/Phases/@phase.Id/EditParameters" class="btn btn-secondary">@Localizer["phases.configure-parameters.button"]</a>
                        <a href="/Phases/@phase.Id" class="btn btn-secondary"><i class="fa-solid fa-eye"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div>@Localizer["common.loading"]</div>
}